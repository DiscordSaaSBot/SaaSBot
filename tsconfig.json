{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"rootDir": "src",
		"outDir": "dist",
		"strictPropertyInitialization": false,
		"baseUrl": ".",
		"paths": {
			"@events/*": ["src/events/*"],
			"@commands/*": ["src/commands/*"],
			"@modules/*": ["src/modules/*"]
		}
	}
}
